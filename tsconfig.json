{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./tools",
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "outDir": "out",
    "resolveJsonModule": true,
    "rootDir": "tools",
    "strict": true,
    "target": "ESNext",
  },
  "include": [
    "tools/**.ts"
  ]
}
